<% provide(:title, "Log In") %>
<h1 class="title is-1 has-text-centered is-spaced">Log In</h1>

<div class="field is-grouped is-grouped-centered">
  <%= form_for(:session, url: login_path) do |f| %>       

    <div class="field">
      <%= f.label :email %>
    </div>
    <div class="field">
      <%= f.email_field :email, class: "input is-medium is-rounded is-dark", placeholder: "Email" %>  
    </div>

    <div class="field">  
      <%= f.label :password %> 
    </div>
    <div class="field">
      <%= f.password_field :password, class: "input is-medium is-rounded is-dark", placeholder: "Password" %>      
    </div>   
  
    <div class="field">
      <%= f.submit "Create An Account", class: "button is-dark is-medium is-rounded" %>  
      <p>New User? <%= link_to "Please, Sign Up.", signup_path %></p>
    </div>
  <% end %>  
</div>
