<% provide(:title, "Home") %>
<section class="hero is-dark is-fullheight">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <header class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to "Task Planify", root_path, class: "navbar-item" %>
          <div class="navbar-burger is-active" data-target="navMenu" aria-label="menu" aria-expanded="false">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </div>
        </div>                 
              
        <div id="navMenu" class="navbar-menu is-active">
          <div class="navbar-end">                                  
              <%= link_to "Home", root_path, class: "navbar-item is-active" %>                              
            <span class="navbar-item">                
              <%= link_to login_path, class: "button is-dark is-inverted" do %>
                <span class="icon">
                  <i class="fas fa-sign-in-alt" aria-hidden="true"></i>
                </span>
                <span>Login</span>
              <% end %>                                                                                      
            </span>
          </div>
        </div>
      </div>
    </header>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-1">
        Welcome to Task Planify!
      </h1>
      <h2 class="subtitle">
        A Ruby on Rails Task Planning Application
      </h2>
      <span class="icon">
        <%= link_to signup_path, class: "button is-dark is-inverted is-large" do %>
          <span class="icon">
            <i class="fas fa-user-plus" aria-hidden="true"></i>
          </span>
          <span>Sign Up!</span>
        <% end %>
      </span>
    </div>
  </div>

  <!-- Hero footer: will stick at the bottom -->
  <div class="hero-foot">
    <div class="container">
      <div class="content has-text-centered">
        <p>
          <strong>Developed</strong> with <span class="icon"><i class="red fas fa-heart"></i></span>
          by <strong>Tim Fleming</strong><br />
          <a href="https://twitter.com/TeeFlem"><i class="fab fa-twitter"></i></a>
          <a href="https://www.linkedin.com/in/tim-fleming-full-stack-software-developer-30a83b24/">
          <i class="fab fa-linkedin"></i></a><a href="https://github.com/tflem"><i class="fab fa-github"></i></a>
          <a href="https://angel.co/tim-fleming"><i class="fab fa-angellist"></i></a>
          <a href="https://stackoverflow.com/users/story/5552405"><i class="fab fa-stack-overflow"></i></a>
          <br /><a href="https://icons8.com">Favicon by Icons8</a>
          <i class="fas fa-minus"></i>Task Planify &copy; 2018
       </p>
      </div>
    </div>
    </nav>
  </div>
</section>

